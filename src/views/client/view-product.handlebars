          <div class="swiper-wrapper flex !h-full">
            {{#each product.images}}
              <div
                class="swiper-slide flex justify-center items-center w-full border border-[var(--main-bg-light)] dark:border-[var(--main-bg-dark)] overflow-hidden"
              >
                <img
                  class="h-full object-cover cursor-pointer"
                  src="{{this}}"
                  alt="{{product.title}}"
                />
              </div>
            {{/each}}
          </div>
        </div>
        <div
          class="nav-for-slider w-full lg:w-fit max-lg:max-w-[608px] max-lg:mx-auto max-lg:mt-8 lg:order-1 pt-2"
        >
          <div class="swiper-wrapper flex lg:flex-col lg:items-end !w-fit">
            {{#each product.images}}
              <div class="swiper-slide thumbs-slide !w-fit aspect-square">
                <img
                  src="{{this}}"
                  alt="{{product.title}}"
                  class="cursor-pointer rounded-xl transition-all duration-500 h-[80px] w-full object-cover"
