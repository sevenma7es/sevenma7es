<a href="/admin/productos" class="w-fit text-[var(--main-text-light)] dark:text-[var(--main-text-dark)] flex hover:underline mb-2">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left">
    <path d="m12 19-7-7 7-7" />
    <path d="M19 12H5" />
  </svg>
  Volver
</a>

<section>
  <div class="w-full md:w-[50%]">
    <h2 class="mb-4 text-xl font-bold text-[var(--main-text-light)] dark:text-white">{{productData.title}}</h2>
    <form action="" id="product-form" reg_id="{{productData._id}}">
      <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div class="sm:col-span-2">
          <label for="name" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Nombre del producto</label>
          <input type="text" name="name" id="title" value="{{productData.title}}" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Nombre del producto" required-field />
        </div>
        <div class="w-full">
          <label for="slug" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Slug</label>
          <input type="text" name="slug" id="slug" value="{{productData.slug}}" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Slug del producto" required-field />
        </div>
        <div class="w-full">
          <label for="published date" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Fecha de publicacion</label>
          <input type="date" name="published date" id="publishedOn" value="{{productData.publishedOn}}" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Product published date" disabled="true" />
        </div>
        <div class="w-full">
          <label for="brand" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Marca</label>
          <input type="text" name="brand" id="brand" value="{{productData.brand}}" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Marca del producto" required-field />
        </div>
        <div class="w-full">
          <label for="price" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Precio</label>
          <div class="flex bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 w-full dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
            <span class="pl-2.5 py-2.5">$</span>
            <input class="w-full bg-transparent border-none outline-none pr-2.5 py-2.5" type="float" name="price" id="price" value="{{productData.price}}" placeholder="145000" required-field />
          </div>

        </div>
        <div>
          <label for="category" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Categoria</label>
          <input id="current_category" class="hidden" disabled type="text" value="{{productData.category._id}}" />
          <select id="category" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
            <option value="">Selecciona una categoría</option>
            {{#each categories}}
              <option value="{{_id}}" id="{{_id}}">{{name}}</option>
            {{/each}}
          </select>
        </div>
        <div>
          <label for="item-weight" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Stock</label>
          <input type="number" name="stock" id="stock" value="{{productData.stock}}" class="bg-[var(--main-light-1)] border border-gray-300 text-[var(--main-text-light)] text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Stock del producto" required-field />
        </div>
        <div class="sm:col-span-2">
          <label for="description" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Description</label>
          <textarea type="text" id="description" rows="8" class="block p-2.5 w-full text-sm text-[var(--main-text-light)] bg-[var(--main-light-1)] rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Descripcion del producto" required-field>{{trim productData.description}}</textarea>
        </div>

        <div class="sm:col-span-2">
          <label for="featured" class="block mb-2 text-sm font-medium text-[var(--main-text-light)] dark:text-white">Producto Seleccionado</label>
          <input id="featured" name="featured" rows="8" type="checkbox" {{isChecked productData.featured}} class="block p-2.5 w-fit text-sm text-[var(--main-text-light)] bg-[var(--main-light-1)] rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-[var(--main-dark-3)] dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Descripción del producto" required-field />
        </div>

        {{#each productData.images}}
          <div class="relative border h-fit">
            <button class="absolute right-0 delete-image-button" data-image-path="{{this}}" type="button">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x">
                <path d="M18 6 6 18" />
                <path d="m6 6 12 12" />
              </svg>
            </button>
            <img src="{{this}}" alt="" />
          </div>
        {{/each}}

        <div id="image-preview" class="mt-2"></div>
        <div class="flex items-center justify-center w-full" id="products-image-container">
          <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-bray-800 dark:bg-[var(--main-dark-3)] hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
            <div class="flex flex-col items-center justify-center pt-5 pb-6">
              <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
              </svg>
              <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span>
                or drag and drop</p>
              <p class="text-xs text-gray-500 dark:text-gray-400">PNG o JPG (MAX. 5MB)</p>
            </div>
            <input id="dropzone-file" type="file" name="images" class="hidden" multiple />
          </label>
        </div>

      </div>
      <button id="edit-product-button" type="submit" class="bg-[var(--main-bg-dark)] hover:bg-[var(--main-dark-5)] text-[var(--main-text-dark)] p-2 mt-2 rounded-md">
        Guardar producto
      </button>
      <div class="hidden mt-2 items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert" id="required_message">
        <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <span class="sr-only">Info</span>
        <div>
          <span class="font-medium">Cuidado!</span>
          Tenes que completar todos los campos para poder guardar el producto.
        </div>
      </div>
    </form>
  </div>
</section>
<script type="module" src="/js/admin/admin-edit-product.js"></script>